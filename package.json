{
  "name": "next-image-loader",
  "version": "0.0.0",
  "description": "Plugin to transparently override the loader in next/image.",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "exports": {
    ".": "./build/index.js",
    "./build/*": {
      "import": {
        "types": "./build/*.d.ts",
        "default": "./build/*.js"
      },
      "require": {
        "types": "./build/*.d.ts",
        "default": "./build/*.js"
      }
    },
    "./*": {
      "import": {
        "types": "./build/*.d.ts",
        "default": "./build/*.js"
      },
      "require": {
        "types": "./build/*.d.ts",
        "default": "./build/*.js"
      }
    }
  },
  "files": [
    "build"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:aiji42/next-image-loader"
  },
  "author": "aiji42 <aiji42@gmail.com> (https://twitter.com/aiji42_dev)",
  "license": "MIT",
  "keywords": [
    "next.js",
    "next",
    "react",
    "plugins",
    "image optimize",
    "image loader"
  ],
  "scripts": {
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "build": "node build.js && npx tsc --declaration --emitDeclarationOnly --declarationDir './build'",
    "prepare": "husky install",
    "semantic-release": "semantic-release",
    "prepack": "yarn build"
  },
  "peerDependencies": {
    "next": ">=13.0.0",
    "react": ">=18.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/node": "^18.11.9",
    "@vitejs/plugin-react": "^2.2.0",
    "c8": "^7.12.0",
    "esbuild": "^0.15.15",
    "husky": "^8.0.2",
    "jsdom": "^20.0.3",
    "lint-staged": "^13.0.3",
    "next": "^13.0.4",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "semantic-release": "^19.0.5",
    "typescript": "^4.9.3",
    "vite": "^3.2.4",
    "vitest": "^0.25.2"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write"
    ]
  }
}
