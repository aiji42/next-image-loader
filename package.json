{
  "name": "next-image-loader",
  "version": "0.0.0-development",
  "description": "Plugin to transparently override the loader in next/image.",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "files": [
    "build"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": "git@github.com:aiji42/next-image-loader.git",
  "author": "aiji42 <aiji42@gmail.com> (https://twitter.com/aiji42_dev)",
  "license": "MIT",
  "keywords": [
    "next.js",
    "next",
    "react",
    "plugins",
    "image optimize",
    "image loader"
  ],
  "bugs": {
    "url": "https://github.com/aiji42/next-image-loader/issues"
  },
  "homepage": "https://github.com/aiji42/next-image-loader#readme",
  "scripts": {
    "lint": "eslint ./src/**/*.{ts,tsx} ./src/*.{ts,tsx}",
    "format": "yarn prettier src/*.{ts,tsx} src/**/*.{ts,tsx} --write",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "build": "tsc --project tsconfig.publish.json && ts-add-module-exports",
    "prepare": "husky install",
    "semantic-release": "semantic-release"
  },
  "peerDependencies": {
    "next": ">=10.0.0",
    "react": ">=17.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@testing-library/react": "^12.1.0",
    "@testing-library/react-hooks": "^7.0.2",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.1",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "babel-jest": "^27.2.2",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.2",
    "jest": "^27.2.2",
    "next": "^11.0.1",
    "prettier": "^2.4.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "semantic-release": "^18.0.0",
    "semantic-release-cli": "^5.4.4",
    "ts-add-module-exports": "^1.0.0",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  }
}
